<%- include("../partials/header.ejs") %>
    <div>
        <h1 style="text-align: center">
            Edit Campground
            <%= campgrounds.name %>
        </h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campgrounds.name %>" name="camp[name]">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" value="<%= campgrounds.price %>" name="camp[price]" min="1" step="1">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campgrounds.image %>" name="camp[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campgrounds.description %>" name="camp[description]">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

    <%- include("../partials/footer") %>