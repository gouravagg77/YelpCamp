<%- include("../partials/header.ejs") %>

    <div>
        <h1 style="text-align: center">
            Create a New campground
        </h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Price/night in Rs" name="price" min="1" step="1">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Description" name="desc">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds"> Back to view campgrounds</a>
        </div>
    </div>

    <%- include("../partials/footer") %>