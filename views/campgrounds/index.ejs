<%- include("../partials/header") %>


    <div class="container" style="margin-top: 10px">
        <header class="jumbotron">
            <div class="container">
                <h1>
                    Welcome to Yelpcamp
                </h1>
                <p>
                    View our hand-picked campgrounds around the world
                </p>
                <p>
                    <a class="btn btn-primary btn-large" href="campgrounds/new">
					Add new campground
				</a>
                </p>
            </div>

        </header>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">


            <% campgrounds.forEach(function(campground){ %>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="img-thumbnail">
                        <img src="<%= campground.image %>" style="width: 100%">
                        <div class="caption">
                            <h4>
                                <%= campground.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show more</a>
                        </p>
                    </div>

                </div>
                <% }); %>

        </div>
    </div>


    <%- include("../partials/footer") %>